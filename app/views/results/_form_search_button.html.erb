<%= simple_form_for :search, url: form_path, method: :get do |f| %>
  <%= f.input :q, label: false, input_html: {class: "d-none", value: params[:q]} %>
  <%# d-none permet de ne pas afficher le champ dans le form  %>
  <%= f.submit button_text, class: "navbar-link" %>
  <% end %>

<!-- on utilise les paramètres form_path et button_text pour pouvoir réutiliser la partial avec d'autres usages -->
