<h1>show de homes</h1>

<form class="form-inline my-2 my-lg-0" action="/search" method="GET">
  <!-- convention REST: si on cherche des infos c'est un GET -->
  <input class="form-control mr-sm-2" name="q" type="search" placeholder="Search here" aria-label="Search" value="<%= params[:q] %>">
  <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search now</button>
</form>
