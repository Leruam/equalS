<div class="counter-container">
  11 234 654 $ <br>
  raised to support equality on Earth <br>
  thanks to 5.3 billion searches <br>
  Thank you!
</div>

<div class="first-infos-container">

  <div class="left-infos">
    <div class="you-infos">
      <h2>You</h2>
      <p>total number of searches:</p>
      <%= @user_total_search_count %>
      <p>number of searches today:</p>
      <%= @user_today_search_count %>
      <p>charities you're supporting: </p>
      <%= @user_charity_count %>
    </div>
    <div class="us-infos">
      <h2>Our community</h2>
      <p>total charities supported:</p>
      <%= @global_charity_count %>
      <p>total number of searches since EqualS was born:</p>
      <%= @global_search_count %>
    </div>
  </div>

  <div class="right-infos">
    <h2>YOUR CHARITIES</h2>
    <div class="user-charities">
    <% @user.charities.each do |charity| %>
    <%= charity.name %>
    <%= cl_image_tag charity.photo.key, crop: :pad %>
    <% end %>
  </div>

    </div>

</div>



<div class="second-infos-container">
  <h2>OTHER CHARITIES</h2>
  <div class="wrapper">
    <% @other_charities.each do |charity| %>
    <div class="row">
      <%= cl_image_tag charity.photo.key, crop: :pad %>
    </div>
    <% end %>
  </div>
</div>


