 <div class="d-flex flex-column align-items-center text-under-search">
  <h1 id="counter"> 11,234,654 â‚¬</h1>
  <div id="sentence">
    <p>raised to support equality on <span class="green-text">Earth</span>
    thanks to your <span class="green-text">5,3 billion </span >searches.</p>
  </div>
  <h4 style="margin-bottom: 25px;">Thank you !</h4>
</div>
<div class="container">
  <div class="container-profil">
    <div class=container-insights>
      <div class="card-insights">
          <div class="underline"><h4>You</h4></div>
          <div class="topline"><p><strong><%= @user_total_search_count %></strong> searches in total</p></div>
          <p><strong><%= @user_today_search_count %></strong> searches today</p>
          <p><strong><%= @user_charity_count %></strong>  charities supported</p>
      </div>
      <div class="card-insights">
        <div class="underline"><h4>Our community</h4></div>
          <div class="topline"><p><strong><%= @global_charity_count %></strong> charities supported by EqualS</p></div>
          <p><strong><%= @global_search_count_today %></strong> total searches today</p>
          <p><strong><%= @global_search_count %></strong> total searches since EqualS was born</p>
      </div>
    </div>
    <div class="card-container-supports">
        <% @user.supports.each do |support| %>
        <div class="card-charity-circle" style="background-image: url(<%=cl_image_path support.charity.photo.key %>)">
          <div class="overlay-supports"></div>
            <div class="display-card-charity-circle">
              <h6 class="mb-1"><%= support.charity.name %></h6>
              <p class="mb-1"><%=  support.charity.category%></p>
              <div class="d-flex flex-column justify-content-center align-items-center">
                <a href="#" class="btn-principal ml-auto mr-auto">INFO</a>
                <%= link_to "remove", support_path(support), method: :delete, class: "btn-third ml-auto mr-auto"%>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>

  <div class="second-infos-container">
    <div class="underline"><h4>More charities...</h4></div>
      <div class="row">
        <% @other_charities.each do |charity| %>
        <div class="col-4 d-flex justify-content-center">
          <div class="card-charity image" style="background-image: url(<%=cl_image_path charity.photo.key, width: 250, height: 300, crop: :fill %>)">
          <div class="overlay-charity"></div>
            <!-- <div class="image" style="background-image: url(<%=cl_image_path charity.photo.key%>)"></div> -->
            <div class="display-card-charity">
              <h6><%= charity.name %></h6>
              <p><%= charity.category %></p>
              <div class="d-flex flex-column justify-content-center align-items-center">
                <%= link_to "SUPPORT", charity_supports_path(charity), method: :post, class: "btn-principal"%>
                <a href="#" class="btn-third">info</a>
              </div>
            </div>
            <!-- <div class="association-name"><p><%= charity.name %></p></div> -->
          </div>
        </div>
        <% end %>
     </div>
  </div>
</div>





